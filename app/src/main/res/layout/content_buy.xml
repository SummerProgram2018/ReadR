<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyActivity"
    tools:showIn="@layout/activity_buy">

    <TextView
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:text="Purchase"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/text_book_name"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:text="Book Name:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />


    <TextView
        android:id="@+id/view_book_name"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:text="(book name)"
        android:textSize="15dp"
        android:layout_below="@+id/text_book_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

    <TextView
        android:id="@+id/text_book_price"
        android:layout_width="119dp"
        android:layout_height="38dp"
        android:text="Price:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />



    <TextView
        android:id="@+id/view_book_price"
        android:layout_width="346dp"
        android:layout_height="38dp"
        android:text="(price)"
        android:textSize="15dp"
        android:layout_below="@+id/text_book_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />


    <TextView
        android:id="@+id/text_bookcoin"
        android:layout_width="185dp"
        android:layout_height="38dp"
        android:text="Bookcoin Owned:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />
    <TextView
        android:id="@+id/view_bookcoin"
        android:layout_width="346dp"
        android:layout_height="38dp"
        android:text="(bookcoin)"
        android:textSize="15dp"
        android:layout_below="@+id/text_bookcoin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579" />


    <Button
        android:id="@+id/button_confirm_purchase"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="354dp" />

</android.support.constraint.ConstraintLayout>

