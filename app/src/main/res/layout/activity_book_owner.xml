<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookInfoActivity">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="107dp"
        android:layout_height="101dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="17dp"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp" />

    <TextView
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_weight="1"
        android:ellipsize="none"
        android:inputType="textMultiLine"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="(rating)"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_toRightOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_book"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_weight="1"
        android:ellipsize="none"
        android:inputType="textMultiLine"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="Rating:"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/image_book"
        android:layout_marginStart="23dp"
        android:layout_weight="1"
        android:ellipsize="none"
        android:inputType="textMultiLine"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:text="(Book name)"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp" />

    <TextView
        android:layout_width="358dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="140dp"
        android:text="(Description)"
        android:background="#71ffa6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp" />

    <RelativeLayout
        android:layout_width="361dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="11dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/button_book_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"/>
            <Button
                android:id="@+id/button_book_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discussion"/>
            <Button
                android:id="@+id/button_book_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner"/>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="196dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp">

        <Button
            android:id="@+id/book_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="purchase"
            android:textSize="15dp" />
    </ScrollView>

</RelativeLayout>